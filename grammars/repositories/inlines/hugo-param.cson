key: 'hugo-param'
patterns: [
  {
    match: '(\\w+=["\'])(([^["\']]+))(["\'])'
    captures:
      1: { name: 'code.hugo.function.parameter.key' }
      2: { name: 'code.hugo.function.parameter.value' }
      3: { patterns: [
             { include: '#links' }
             { include: '#code' }
           ]
         }
      4: { name: 'code.hugo.function.parameter.key' }
  }
]
